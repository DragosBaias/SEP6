@page "/login"
@inject NavigationManager Navigation

<div class="loginContainer">
    <h3 class="text-center font-style">Imperium Movie</h3>

    <form class="formContainer" method="POST" action="/login">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control custom-input" name="username" placeholder="Enter your username" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control custom-input" name="password" placeholder="Enter your password" required>
        </div>
        <div class="text-center">
            <button type="submit" class="btn custom-button">Log in</button>
            <button type="button" class="btn custom-button" @onclick="ContinueAsGuest">Continue as Guest</button>
        </div>
    </form>

    <div class="text-center mt-3">
        Don't have an account? <a href="/register">Register here!</a>
    </div>
</div>

@code {

    private void ContinueAsGuest()
    {
        Navigation.NavigateTo("/mainpage");
    }

}