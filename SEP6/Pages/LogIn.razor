@page "/login"
@inject NavigationManager Navigation

<div class="loginContainer">
    <div class="logo-container">
        <img src="images/Logo.jpg" alt="Imperium Movie Logo" class="logo-img">
    </div>

    <form class="formContainer" method="POST" action="/login">
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control custom-input" name="username" placeholder="Enter your username" required>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control custom-input" name="password" placeholder="Enter your password" required>
        </div>
        <div class="text-center">
            <button type="submit" class="btn custom-button">Log in</button>
        </div>
    </form>

    <div class="text-center mt-3">
        Don't have an account? <a href="/register" class="register-link">Register here!</a>
    </div>
</div>


