        color: white;
    }

    .movies-container {
        margin-top: 30px;
    }

    .movies-title {
        font-size: 20px;
        text-align: center;
        color: white;
    }

    .slideshow {
        display: flex;
        flex-wrap: nowrap;
        overflow-x: auto;
